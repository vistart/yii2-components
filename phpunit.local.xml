<?xml version="1.0" encoding="utf-8"?>
<phpunit bootstrap="./tests/bootstrap.local.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false"
         timeoutForLargeTests="1200"
         verbose="true">
    <testsuites>
        <testsuite name="Common">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="json" target="tmp/logfile.json" />
        <log type="tap" target="tmp/logfile.tap" />
        <log type="junit" target="tmp/logfile.xml" logIncompleteSkipped="false" />
        <log type="testdox-html" target="tmp/testdox.html" />
        <log type="testdox-text" target="tmp/testdox.txt" />
        <log type="coverage-html" target="tmp/coverage" lowUpperBound="35" highLowerBound="70"/>
    </logging>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">rest</directory>
            <directory suffix=".php">web</directory>
            <directory suffix=".php">widgets</directory>
        </whitelist>
    </filter>
</phpunit>
